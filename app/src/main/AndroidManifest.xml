<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techmorphosis.grassroot">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <permission android:name="com.techmorphosis.grassroot.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.techmorphosis.grassroot.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activities.HomeScreen"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="a7c7f0c500c90b9563ff8801718ab0b391792bc3" />

        <activity
            android:name=".ui.activities.Join_Request"
            android:label="@string/title_activity_join__request" />
        <activity
            android:name=".ui.activities.CreateGroupActivity"
            android:label="@string/title_activity_create__group"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.activities.AddMembersActivity"
            android:label="@string/title_activity_add_members"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.PhoneBookContactsActivity"
            android:label="@string/title_activity_phone_book_contacts" />
        <activity
            android:name=".contact.MainActivity"
            android:label="@string/title_activity_mainactivity" />
        <activity
            android:name=".ui.activities.DialogActivity"
            android:label="@string/title_activity_dilog"
            android:theme="@style/MyDialog" />
        <activity
            android:name=".ui.activities.AddContactManually"
            android:label="@string/title_activity_add_contact_manually"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activities.Blank"
            android:label="@string/title_activity_blank"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.activities.Group_Activities" />
        <activity android:name=".ui.activities.NewActivities"></activity>

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.techmorphosis.grassroot" />
            </intent-filter>
        </receiver>
        <service
            android:name="com.techmorphosis.grassroot.services.GcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <service
            android:name="com.techmorphosis.grassroot.services.InstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <service android:name=".services.GcmRegistrationService"></service>

    </application>

</manifest>
