<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorControlActivated">@color/buttoncolor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <style name="Theme.IntroScreen" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.FloatingAccentButtonOverlay">
        <item name="colorAccent">#FFB805</item>
    </style>

    <style name="FloatingActionButtonGroup">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="FloatingActionButtonDropDown">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="FloatingActionButtonLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/padding_half</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:elevation">@dimen/fab_elevation</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_medium</item>
    </style>

    <style name="PinnedHeader">
        <item name="android:background">@color/light_background</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textAllCaps" tools:targetApi="ice_cream_sandwich">true</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Starting GR team defined styles here -->
    <style name="GiantHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxEms">10</item>
        <item name="android:textSize">34sp</item> <!-- todo: move to dimens -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardViewHeader">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/txt_large</item>
        <item name="android:padding">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="CardViewSubHeader">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:padding">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardViewBoldNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/dark_grey_text</item>
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardViewBodyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_grey_text</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <style name="CardViewFinePrint">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">2dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">80dp</item>
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MemberListHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/mlist_title</item>
        <item name="android:textSize">@dimen/txt_medium</item>
    </style>

    <style name="MemberListRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="MemberListItemRow">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">26dp</item>
    </style>

    <style name="MemberListItemNameText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/txt_medium</item>
    </style>

    <style name="NewTaskButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TaskListCard" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="contentPadding">10dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardBackgroundColor">#fff</item>
    </style>

    <style name="ListItemSmall">
        <item name="android:padding">@dimen/padding_half</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="text_medium" tools:ignore="NewApi">
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="text_small" tools:ignore="NewApi">
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Button_green" tools:ignore="NewApi">
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:textColor">@drawable/green_txt</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/register</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="Button_white" tools:ignore="NewApi">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:textColor">@drawable/white_txt</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/login</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="Button" tools:ignore="NewApi">
        <item name="android:textSize">@dimen/md_button_textsize</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">@dimen/md_button_min_width</item>
        <item name="android:paddingLeft">@dimen/md_button_textpadding_horizontal</item>
        <item name="android:paddingRight">@dimen/md_button_textpadding_horizontal</item>
    </style>

    <style name="AppTheme.DialogMetrics">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dialog_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/dialog_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/dialog_padding_vertical</item>
    </style>

    <!-- SECTION ENDS -->

    <!-- CALL MEETING / VOTES / ETC STYLES -->

    <style name="RootCardView" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">3dp</item>
        <item name="contentPadding">10dp</item>
    </style>

    <style name="FormCardView" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="FormCardViewLightGrey" parent="FormCardView">
        <item name="cardBackgroundColor">@color/md_grey_50</item>
    </style>

    <style name="TextCharCounter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/ev_txt_counter</item>
    </style>

    <style name="FormSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="ReminderRowText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/dark_grey_text</item>
        <item name="android:layout_marginBottom">15dp
        </item> <!-- todo: fix this hack for alignment -->
    </style>

    <style name="ReminderSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ButtonFlat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">@dimen/md_button_textsize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/button_flat_white</item>

        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">@dimen/md_button_min_width</item>
        <item name="android:paddingLeft">@dimen/md_button_textpadding_horizontal</item>
        <item name="android:paddingRight">@dimen/md_button_textpadding_horizontal</item>
    </style>

    <!-- ANIMATIONS -->
    <style name="animation_fast_flyinout">
        <item name="android:windowEnterAnimation">@anim/flyin_fast</item>
        <item name="android:windowExitAnimation">@anim/flyout_fast</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDialog" parent="@android:style/Theme.Dialog" />


</resources>
