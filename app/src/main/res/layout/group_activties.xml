<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:id="@+id/ic_home_vote_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_vote_active"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/ic_home_call_meeting_active"
            />


        <ImageView
            android:id="@+id/ic_home_call_meeting_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_call_meeting_active"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            />


        <ImageView
            android:id="@+id/ic_home_to_do_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_to_do_active"
            android:layout_toRightOf="@+id/ic_home_call_meeting_active"

            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/tv_dialog_bottom_title"
        android:layout_below="@+id/rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />

</RelativeLayout>