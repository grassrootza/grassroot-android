<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_background_pressed"
    tools:context="com.techmorphosis.grassroot.ui.activities.Group_Activities">

    <RelativeLayout
        android:id="@+id/ga_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/primaryColor"
        android:gravity="center_vertical"
        android:elevation="5dp"

        >

        <ImageView
            android:id="@+id/iv_ga_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="@dimen/padding"
            android:background="@drawable/button_alpha_rlsimple"
            android:src="@drawable/btn_back_wt"
            />
            
        <TextView
            android:id="@+id/tv_ga_toolbar_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding"
            android:textSize="@dimen/txt_large"
            android:text="@string/ga_tv_toolbar"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/iv_ga_back"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="40dp"
            />
        
        <ImageView
            android:id="@+id/iv_ga_filter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:src="@drawable/btn_filter"
            android:layout_alignParentRight="true"

            />
        
        
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_ga"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="10dp"
        tools:listitem="@layout/row_group_activities"
        android:layout_below="@+id/ga_toolbar"
        android:clipToPadding="false"
        >

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/custom_progress_background"
        android:visibility="gone"
        />


    <include
        android:id="@+id/error_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/qube_error_layout"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <com.techmorphosis.grassroot.utils.ProgressBarCircularIndeterminate
        android:id="@+id/prg_ga"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@color/primaryColor"
        android:layout_centerInParent="true"
        android:visibility="gone"
        ></com.techmorphosis.grassroot.utils.ProgressBarCircularIndeterminate>

    <TextView
        android:id="@+id/txt_prg_ga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prg_message"
        android:layout_below="@+id/prg_ga"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_add"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@color/fabcolor"
        android:elevation="2dp"
        android:layout_marginBottom="20dp"
    />



</RelativeLayout>
