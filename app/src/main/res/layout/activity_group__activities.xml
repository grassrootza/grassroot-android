<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_background_pressed"
    tools:context="com.techmorphosis.grassroot.ui.activities.Group_Activities">

    <RelativeLayout
        android:id="@+id/ga_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/primaryColor"
        android:gravity="center_vertical"
        android:elevation="5dp"

        >

        <ImageView
            android:id="@+id/iv_ga_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="@dimen/padding"
            android:background="@drawable/button_alpha_rlsimple"
            android:src="@drawable/btn_back_wt"
            />
            
        <TextView
            android:id="@+id/tv_ga_toolbar_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding"
            android:textSize="@dimen/txt_large"
            android:text="@string/ga_tv_toolbar"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/iv_ga_back"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="40dp"
            />
        
        <ImageView
            android:id="@+id/iv_ga_filter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:src="@drawable/btn_filter"
            android:layout_alignParentRight="true"

            />
        
        
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_ga"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="10dp"
        tools:listitem="@layout/row_group_activities"
        android:layout_below="@+id/ga_toolbar"
        >

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/custom_progress_background"
        android:visibility="gone"
        />


    <include
        android:id="@+id/error_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/error_layout"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fabbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        fab:menu_backgroundColor="@android:color/transparent"

        fab:menu_shadowColor="#444"
        fab:menu_colorNormal="#FFB805"
        fab:menu_colorPressed="#F2AB00"
        fab:menu_colorRipple="#D99200"

        >




    </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>
