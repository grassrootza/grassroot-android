<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#00000000"
    android:orientation="vertical">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mobile2">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Verification code"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#5d5d5d"
            android:ems="10"
            android:textColor="#000"
            android:drawableRight="@drawable/ic_key"
            android:drawablePadding="5dp"
            android:imeOptions="actionDone"
            >

        </android.support.design.widget.TextInputEditText>


    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/txt_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txtresend"
        android:textSize="@dimen/txt_medium"
        android:layout_below="@+id/mobile2"
        android:layout_marginTop="10dp"
        android:background="@drawable/dr_bt_otp" />


    <Button
        android:id="@+id/bt_submit_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonrounded_corner"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="@string/bt_submit_otp"
        android:textSize="@dimen/txt_medium" />

</RelativeLayout>