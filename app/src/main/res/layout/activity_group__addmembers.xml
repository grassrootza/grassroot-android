<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_am_root"
    style="@style/AppTheme">

    <RelativeLayout
        android:id="@+id/relative_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_save">

        <LinearLayout
            android:id="@+id/toolbar_home"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:orientation="horizontal"
            android:background="@color/primaryColor">

            <ImageView
                android:id="@+id/iv_crossimage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/btn_close_white"
                android:layout_gravity="center_vertical"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:background="@drawable/button_alpha_rlsimple" />

            <TextView
                android:id="@+id/txt_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_large"
                android:layout_gravity="center_vertical"
                android:text="@string/am_title"
                android:textColor="@color/white" />

        </LinearLayout>

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/CoordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_home">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:contentScrim="?attr/colorPrimary"
                    app:expandedTitleMarginEnd="30dp"
                    app:expandedTitleMarginStart="10dp"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <RelativeLayout
                        android:id="@+id/rl_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_below="@+id/ll_toolbar"

                        android:paddingLeft="46dp"
                        android:paddingRight="16dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="40dp"

                        android:background="@color/primaryColor"

                        app:layout_collapseMode="parallax"
                        app:layout_scrollFlags="scroll|enterAlways" >

                        <TextView
                            android:id="@+id/am_tv_groupname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cg_group_name"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:maxEms="10"
                            android:elegantTextHeight="true"
                            android:textSize="34sp"
                            android:textColor="@color/white" />

                    </RelativeLayout>

                </android.support.design.widget.CollapsingToolbarLayout>


            </android.support.design.widget.AppBarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/am_new_member_list_container"
                    android:visibility="invisible">

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/am_new_member_list_container"
                    android:id="@+id/am_existing_member_list_container">

                </RelativeLayout>

            </RelativeLayout>

            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/am_add_member_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"

                fab:menu_shadowColor="#444"
                fab:menu_colorNormal="#FFB805"
                fab:menu_colorPressed="#F2AB00"
                fab:menu_colorRipple="#D99200"

                fab:menu_openDirection="down"

                app:layout_anchor="@id/appbar"
                app:layout_anchorGravity="bottom|right|end"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/icon_add_member_manually"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fab_edit"
                    fab:fab_label="Add Manually"
                    style="@style/MenuButtonsStyle"
                    android:visibility="gone"
                    />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/icon_add_from_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fab_call"
                    fab:fab_label="Add via Contacts"
                    style="@style/MenuButtonsStyle"
                    android:visibility="gone"
                    />


            </com.github.clans.fab.FloatingActionMenu>

        </android.support.design.widget.CoordinatorLayout>

    </RelativeLayout><!--relative_root-->


    <Button
        android:id="@+id/am_bt_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/cg_Save"
        android:textSize="@dimen/txt_large"
        android:layout_marginBottom="20dp"
        android:textColor="@drawable/green_txt"
        android:background="@drawable/register"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />

</RelativeLayout>

