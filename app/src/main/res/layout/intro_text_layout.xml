<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/header_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="@dimen/txt_xlarge"
        android:gravity="center"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/primaryColor"
        android:textAllCaps="true"
        android:textStyle="bold"
        tools:text="Title" />

    <TextView
        android:id="@+id/message_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="@dimen/txt_medium"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:textColor="@color/dark_grey_text"
        tools:text="Message"/>

    <!-- todo : this should really be outside the page, but viewgroup takes all space (Android weirdness)
    so for the moment am putting it in here ... fix once have better handle on height rendering etc -->

    <LinearLayout
        android:id="@+id/page_tracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_xxlarge">

        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@color/primaryColor"/>

        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="#bbbbbb"
            android:layout_marginLeft="7dp"/>

        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="#bbbbbb"
            android:layout_marginLeft="7dp"/>

        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="#bbbbbb"
            android:layout_marginLeft="7dp"/>

    </LinearLayout>

</LinearLayout>