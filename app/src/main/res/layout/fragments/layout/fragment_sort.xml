<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragments.RateUsFragment"
    android:background="@drawable/d_rate_us_bg"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sort_title"
        android:textSize="@dimen/txt_large"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/grey"
        />


    <View android:background="@color/primaryColor" android:layout_width="fill_parent" android:layout_height="2dp" />
    <TextView android:textSize="@dimen/txt_medium"  android:gravity="center_horizontal" android:id="@+id/tv_Date" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/date"  android:textColor="@color/grey"/>
    <View android:background="@color/grey_divider" android:layout_width="fill_parent" android:layout_height="0.100000024dip" />
    <TextView android:textSize="@dimen/txt_medium"  android:gravity="center_horizontal" android:id="@+id/role" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/role" android:textColor="@color/grey"/>
    <View android:background="@color/grey_divider" android:layout_width="fill_parent" android:layout_height="0.100000024dip" />
    <TextView android:textSize="@dimen/txt_medium"  android:gravity="center_horizontal" android:id="@+id/Default" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/Default" android:textColor="@color/grey" />
</LinearLayout>