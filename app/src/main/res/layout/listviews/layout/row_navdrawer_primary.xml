<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/nav_bar_item_height"
    android:id="@+id/item_root_view" >

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="@dimen/nav_bar_icon_max"
        android:layout_height="@dimen/nav_bar_icon_max"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/item_label"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/item_icon"
        android:textSize="@dimen/txt_medium"/>

    <TextView
        android:id="@+id/item_counter"
        android:layout_width="@dimen/nav_bar_counter_size"
        android:layout_height="@dimen/nav_bar_counter_size"
        android:textColor="@color/white"
        android:textAppearance="?android:textAppearanceMedium"
        android:textSize="12sp"
        android:background="@drawable/notification_txt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_large"
        android:gravity="center|center_vertical"
        android:layout_centerVertical="true" />

</RelativeLayout>