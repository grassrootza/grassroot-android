<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="@color/white"
    android:clickable="true"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="@dimen/group_icon_large"
        android:layout_height="@dimen/group_icon_large"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/padding_half"
        android:layout_marginStart="@dimen/padding_half"
        android:src="@drawable/ic_groups_default_avatar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:layout_toRightOf="@+id/notification_icon">

        <TextView
            android:id="@+id/notification_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Group name"
            android:textSize="@dimen/txt_medium"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/notification_text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="The longer message"
            android:layout_below="@+id/notification_text_title"
            android:textSize="@dimen/txt_medium"
            android:textColor="@color/textSecondaryColorDark"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/thin_separator_height"
        android:layout_alignParentBottom="true"
        android:background="@color/md_grey_200" />

</RelativeLayout>


