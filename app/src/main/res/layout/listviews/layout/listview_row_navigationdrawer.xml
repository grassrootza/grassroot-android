<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/nav_bar_item_height"
    android:id="@+id/rl_drawer_row" >

    <ImageView
        android:id="@+id/iv_titleicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/iv_titleicon"
        android:textSize="@dimen/txt_medium"/>


    <TextView
        android:id="@+id/txt_title_counter"
        android:layout_width="@dimen/nav_bar_icon_max"
        android:layout_height="@dimen/nav_bar_icon_max"
        android:textColor="@color/white"
        android:textAppearance="?android:textAppearanceMedium"
        android:textSize="12sp"
        android:background="@drawable/notification_txt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_large"
        android:gravity="center|center_vertical"
        android:visibility="invisible"
        android:layout_centerVertical="true" />

</RelativeLayout>