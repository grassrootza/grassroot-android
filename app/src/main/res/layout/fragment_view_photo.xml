<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/photo_main_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/ic_logo_splashscreen"
        android:background="@color/white" />

    <TextView
        android:id="@+id/photo_caption_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_half"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:visibility="visible"
        android:background="@color/white"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/txt_medium"
        tools:text="5 people detected in photo"/>

    <LinearLayout
        android:id="@+id/photo_edit_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_gravity="end">

        <Button
            android:id="@+id/photo_edit_count"
            style="@style/Flat_Button_White"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:text="@string/vt_photo_edit_details"/>

        <Button
            android:id="@+id/photo_delete"
            style="@style/Flat_Button_White"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:text="@string/vt_photo_delete"/>

    </LinearLayout>

</LinearLayout>