<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/im_bg"
    android:orientation="vertical"
    tools:context="com.techmorphosis.macbee.ui.activities.StartActivity"
    android:id="@+id/rl_start"

    >


        <RelativeLayout
            android:id="@+id/rl_homelogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:src="@drawable/im_glow"


                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_logo_splashscreen"


                />


        </RelativeLayout>






    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:padding="10.0dip"
            android:src="@drawable/btn_back_green"
            android:visibility="invisible" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="3.0"

            />

        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_centerInParent="true"
            android:layout_weight="7.0"
            android:animateLayoutChanges="true"
            />
    </LinearLayout>
</RelativeLayout>