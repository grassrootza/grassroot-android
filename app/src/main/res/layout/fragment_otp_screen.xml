<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_otp_field">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/otp_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/otp_hint"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/primaryColor"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_key"
            android:drawablePadding="5dp"
            android:imeOptions="actionDone"
            android:inputType="number">

        </android.support.design.widget.TextInputEditText>


    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/txt_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txtresend"
        android:textSize="@dimen/txt_medium"
        android:layout_below="@+id/til_otp_field"
        android:layout_marginTop="10dp"
        android:background="@drawable/dr_bt_otp" />


    <Button
        android:id="@+id/bt_submit_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonrounded_corner"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="@string/bt_submit_otp"
        android:textSize="@dimen/txt_medium" />

</RelativeLayout>