<?xml version="1.0" encoding="utf-8"?> <!-- todo : clean this up -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/vv_body_row">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/txt_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryColor"
            android:text="@string/vt_row_yes" />

        <TextView
            android:id="@+id/count_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/primaryColor"
            tools:text="2" />

    </RelativeLayout>

    <View
        style="@style/SettingsSeparator" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/txt_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/vt_row_no" />

        <TextView
            android:id="@+id/count_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            tools:text="2" />

    </RelativeLayout>

    <View
        style="@style/SettingsSeparator" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/txt_maybe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vt_row_abstain" />

        <TextView
            android:id="@+id/count_abstain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="2" />

    </RelativeLayout>

    <View
        style="@style/SettingsSeparator" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/txt_no_response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vt_row_no_reply" />

        <TextView
            android:id="@+id/count_no_response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="2" />

    </RelativeLayout>

</LinearLayout>