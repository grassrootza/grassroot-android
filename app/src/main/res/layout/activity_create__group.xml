<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_cg_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relative_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_save"

        >

        <LinearLayout
            android:id="@+id/toolbar_home"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@color/primaryColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_crossimage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_alpha_rlsimple"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/btn_close_white" />

            <TextView
                android:id="@+id/txt_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/cg_title"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_large" />


        </LinearLayout>


        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/CoordinatorLayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_home">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

                >

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:contentScrim="?attr/colorPrimary"
                    app:expandedTitleMarginEnd="30dp"
                    app:expandedTitleMarginStart="10dp"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"

                    >

                    <RelativeLayout
                        android:id="@+id/rl_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_below="@+id/ll_toolbar"

                        android:background="@color/primaryColor"
                        android:paddingBottom="40dp"
                        android:paddingLeft="46dp"
                        android:paddingRight="16dp"

                        android:paddingTop="10dp"

                        app:layout_collapseMode="parallax"
                        app:layout_scrollFlags="scroll|enterAlways"

                        >

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/et1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/TextLabel"

                            >

                            <EditText
                                android:id="@+id/et_groupname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="@string/cg_group_name"
                                android:imeOptions="actionNext"
                                android:maxLength="10"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="34sp"
                                android:textStyle="normal"


                                />

                        </android.support.design.widget.TextInputLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et1"

                            >

                            <android.support.design.widget.TextInputLayout

                                android:id="@+id/et2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/TextLabel"

                                >

                                <EditText
                                    android:id="@+id/et_group_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="top"
                                    android:hint="@string/cg_group_description"
                                    android:imeOptions="actionDone"
                                    android:inputType="textMultiLine|textNoSuggestions"
                                    android:lines="5"
                                    android:maxLength="320"
                                    android:maxLines="10"
                                    android:minLines="5"
                                    android:padding="10dp"
                                    android:scrollbars="vertical"
                                    android:singleLine="true"
                                    android:textColor="@color/white"
                                    android:textCursorDrawable="@drawable/color_cursor"
                                    android:textSize="@dimen/txt_medium"
                                    android:textStyle="bold"

                                    />

                            </android.support.design.widget.TextInputLayout>


                            <TextView
                                android:id="@+id/tv_counter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/et2"
                                android:text="0/320"
                                android:textColor="@color/white" />
                        </RelativeLayout>


                    </RelativeLayout>


                </android.support.design.widget.CollapsingToolbarLayout>


            </android.support.design.widget.AppBarLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <TextView
                    android:id="@+id/tv_cg_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/cg_title_contact"
                    android:textColor="@color/cg_title"
                    android:textSize="@dimen/txt_small"
                    android:visibility="visible"

                    />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_contacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_cg_title"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="0dp"
                    android:clipToPadding="false"
                    android:scrollbars="vertical">

                </android.support.v7.widget.RecyclerView>


            </RelativeLayout>



            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"

                android:layout_margin="16dp"
                fab:menu_shadowColor="#444"
                fab:menu_colorNormal="#FFB805"
                fab:menu_colorPressed="#F2AB00"
                fab:menu_colorRipple="#D99200"
                fab:menu_openDirection="down"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:visibility="gone"

                app:layout_anchor="@id/appbar"
                app:layout_anchorGravity="bottom|right|end"

                >

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/ic_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fab_edit"
                    fab:fab_label="Add Manually"
                    style="@style/MenuButtonsStyle"
                    android:visibility="gone"
                    />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/ic_fab_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fab_call"
                    fab:fab_label="Add via Contacts"
                    style="@style/MenuButtonsStyle"
                    android:visibility="gone"
                    />


            </com.github.clans.fab.FloatingActionMenu>
        </android.support.design.widget.CoordinatorLayout>

    </RelativeLayout>
    <!--relative_root-->


    <Button
        android:id="@+id/bt_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/register"
        android:text="@string/cg_Save"
        android:textAllCaps="true"
        android:textColor="@drawable/green_txt"
        android:textSize="@dimen/txt_large" />

</RelativeLayout>

