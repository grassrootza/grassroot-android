<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#00000000"
    android:layout_centerInParent="true"
    android:id="@+id/container_register"
    android:animateLayoutChanges="true">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:layout_marginBottom="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_userName"
            android:padding="10dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_marginBottom="5dp"
            android:textColorHint="#ccc"
            android:inputType="textPersonName|textCapWords"
            android:textColor="#000"
            android:drawableRight="@drawable/ic_user"
            android:maxLength="15" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mobile"
        android:layout_below="@+id/userName">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_mobile_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_mobile_register"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#ccc"
            android:ems="10"
            android:inputType="phone"
            android:textColor="#000"
            android:drawableRight="@drawable/ic_call"
            android:maxLength="13"
            android:imeOptions="actionDone"

            />
    </android.support.design.widget.TextInputLayout>

<Button
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/buttonrounded_corner"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="@string/bt_register"
        android:textSize="@dimen/txt_medium" />

</RelativeLayout>

