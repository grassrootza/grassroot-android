<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root_cv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white_background"
    tools:context=".ui.activities.CreateVoteActivity"

    >


    <android.support.v7.widget.Toolbar
        android:id="@+id/tlb_cv"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/primaryColor"
        android:elevation="5dp">

        <TextView
            android:id="@+id/txt_tlb_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cv_txt_tlb"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_large" />

    </android.support.v7.widget.Toolbar>

    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tlb_cv">-->

    <ScrollView
        android:id="@+id/cv_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_call_vote"
        android:layout_below="@+id/tlb_cv"
        android:clipToPadding="false"
        android:paddingTop="15dp"
        android:scrollbars="vertical"

        >

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="3dp"
            card_view:contentPadding="10dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <RelativeLayout
                    android:id="@+id/rl_txt_ipl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/txt_ipl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_title_cv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:hint="@string/cv_et_title"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="35"
                            android:singleLine="true"
                            android:textColor="@color/vv_title"
                            android:textSize="@dimen/txt_medium"

                            />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/txt_title_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/txt_ipl"
                        android:padding="5dp"
                        android:textColor="@color/ev_txt_counter"
                        tools:text="10/35"

                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_postedname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_txt_ipl"
                    android:layout_marginTop="5dp"
                    android:text="Posted By "
                    android:textColor="@color/vv_postedby"
                    android:textSize="@dimen/txt_small"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/cv_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txt_postedname"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/vv_divider" />

                <RelativeLayout
                    android:id="@+id/rl_txt_ipl_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv_divider"

                    >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/txt_ipl_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_description_cv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:hint="@string/cv_et_desc"
                            android:imeOptions="actionDone"
                            android:inputType="textMultiLine"
                            android:lines="5"
                            android:maxLength="320"
                            android:maxLines="10"
                            android:minLines="5"
                            android:textColor="@color/vv_description"
                            android:textSize="@dimen/txt_medium" />


                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/txt_desc_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/txt_ipl_desc"
                        android:padding="5dp"
                        android:textColor="@color/ev_txt_counter"
                        tools:text="10/320"

                        />

                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_datepicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_txt_ipl_desc"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="3dp"
                    card_view:contentPadding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            android:id="@+id/txt_deadline_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/ev_closing"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_medium" />

                        <TextView
                            android:id="@+id/txt_deadline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableLeft="@drawable/btn_calender"
                            android:drawablePadding="5dp"
                            android:singleLine="true"
                            android:text="Select Date"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_medium" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:id="@+id/rl_alerts_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv_datepicker"
                    android:layout_marginTop="10dp"
                    android:background="@color/vv_Body_agree_disagree">

                    <TextView
                        style="@style/text_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/cv_config_alerts_title"
                        android:textColor="@color/vv_txtResponse" />

                    <ImageView
                        android:id="@+id/iv_expand_alert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_arrow_down" />
                </RelativeLayout>
                <!--alert header-->

                <RelativeLayout
                    android:id="@+id/rl_alerts_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_alerts_header"
                    android:background="@color/vv_Body_agree_disagree"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp"

                        >

                        <RelativeLayout
                            android:id="@+id/rl_row_one_day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">

                            <TextView
                                style="@style/text_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/one_day"
                                android:textColor="@color/vv_txtResponse"

                                />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/sw_one_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_row_half_day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_row_one_day"
                            android:layout_marginBottom="10dp"

                            >

                            <TextView
                                style="@style/text_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/half_day"
                                android:textColor="@color/vv_txtResponse"

                                />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/sw_half_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_row_one_hour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_row_half_day"
                            android:layout_marginBottom="10dp"

                            >

                            <TextView
                                style="@style/text_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/one_hour"
                                android:textColor="@color/vv_txtResponse"

                                />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/sw_one_hour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/rl_row_immediate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_row_one_hour">

                            <TextView
                                style="@style/text_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/immediate"
                                android:textColor="@color/vv_txtResponse"

                                />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/sw_immediate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true" />

                        </RelativeLayout>

                    </RelativeLayout>


                </RelativeLayout>
                <!--alert body-->

                <android.support.v7.widget.CardView
                    android:id="@+id/rl_notify_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_alerts_body"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    card_view:cardBackgroundColor="@color/vv_Body_agree_disagree"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="3dp"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/text_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/cv_notify_group_title"
                            android:textColor="@color/vv_txtResponse" />

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/sw_notifyall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:checked="true"
                            android:paddingRight="5dp"

                            />

                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:id="@+id/rl_notify_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_notify_header"
                    android:background="@color/vv_Body_Response"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/underline"
                        android:orientation="horizontal"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/cv_notify_member_prefix"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/member_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            tools:text="5" />

                        <TextView
                            android:id="@+id/suffix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            tools:text="members" />

                    </LinearLayout>

                </RelativeLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

    <Button
        android:id="@+id/bt_call_vote"
        style="@style/Button_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:text="@string/cv_bt_call_vote" />


</RelativeLayout>
