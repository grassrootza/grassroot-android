<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activities.CreateMeetingActivity"

    android:id="@+id/cmtg_rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white_background">

    <android.support.v7.widget.Toolbar
        android:id="@+id/cmtg_tlb"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/primaryColor"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/cv_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/cmtg_tlb"
        android:layout_above="@+id/cmtg_btn_call_meeting"
        android:clipToPadding="false"
        android:paddingTop="15dp"
        android:scrollbars="vertical">

        <!-- todo : put into styles -->
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="3dp"
            card_view:contentPadding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/cmtg_txt_ipl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/cmtg_title_hint">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/cmtg_et_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:inputType="textAutoComplete"
                        android:maxLength="35"
                        android:lines="1"
                        android:maxLines="2"
                        android:scrollbars="vertical"
                        android:textColor="@color/vv_title"
                        android:textSize="@dimen/txt_medium"
                        android:imeOptions="actionNext" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    style="@style/TextCharCounter"
                    android:id="@+id/cmtg_subject_count"
                    android:layout_below="@+id/cmtg_txt_ipl"
                    android:visibility="visible"
                    android:text="0/35" />

                <!-- todo : use a location selector? may be resource intensive -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cmtg_subject_count"
                    android:id="@+id/cmtg_til_location"
                    android:hint="@string/cmtg_location_hint">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/cmtg_et_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:maxLength="35"
                        android:lines="1"
                        android:textColor="@color/vv_title"
                        android:textSize="@dimen/txt_medium"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    style="@style/TextCharCounter"
                    android:id="@+id/cmtg_location_count"
                    android:layout_below="@id/cmtg_til_location"
                    android:text="0/35" />

                <!-- todo : maybe make this collapsible -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/cmtg_ipl_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cmtg_location_count">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/cmtg_et_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:hint="@string/cmtg_desc_hint"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:lines="2"
                        android:minLines="2"
                        android:maxLength="250"
                        android:maxLines="5"
                        android:textColor="@color/vv_description"
                        android:textSize="@dimen/txt_medium" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    style="@style/TextCharCounter"
                    android:id="@+id/cmtg_desc_count"
                    android:layout_below="@+id/cmtg_ipl_desc"
                    tools:text="0/250" />

                <android.support.v7.widget.CardView
                    style="@style/FormCardView"
                    android:id="@+id/cmtg_cv_datepicker"
                    android:layout_below="@+id/cmtg_desc_count"

                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="3dp"
                    card_view:contentPadding="10dp">

                    <!-- todo : try to flatten this -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_deadline_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/cmtg_date_time_desc"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_medium" />

                        <TextView
                            android:id="@+id/cmtg_txt_deadline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableLeft="@drawable/btn_calender"
                            android:drawablePadding="5dp"
                            android:singleLine="true"
                            android:text="Select Date"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_medium" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <!-- todo : turn this into a fragment and include it, plus flatten it -->
                <!--alert header-->
                <android.support.v7.widget.CardView
                    android:id="@+id/cmtg_cv_reminder"
                    android:layout_below="@id/cmtg_cv_datepicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/light_background"
                    style="@style/FormCardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/cmtg_reminder_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/text_medium"
                                android:textColor="@color/dark_grey_text"
                                android:text="@string/cmtg_config_reminders_heading"/>

                            <ImageView
                                android:id="@+id/cmtg_iv_expand_alert"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_arrow_down"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/cmtg_reminder_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:visibility="gone">

                            <!-- todo : fix layout alignment in here w/out extra nesting (also API 16 weirdness)-->
                            <TextView
                                android:id="@+id/tv_one_day"
                                style="@style/ReminderRowText"
                                android:text="@string/one_day" />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/cmtg_sw_one_day"
                                android:layout_width="match_parent"
                                style="@style/ReminderSwitch"/>

                            <TextView
                                android:id="@+id/tv_half_day"
                                android:layout_below="@id/cmtg_sw_one_day"
                                style="@style/ReminderRowText"
                                android:text="@string/half_day" />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/cmtg_sw_half_day"
                                android:layout_below="@id/cmtg_sw_one_day"
                                style="@style/ReminderSwitch"/>

                            <TextView
                                android:id="@+id/tv_one_hour"
                                android:layout_below="@id/tv_half_day"
                                style="@style/ReminderRowText"
                                android:text="@string/one_hour" />

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/cmtg_sw_one_hour"
                                android:layout_below="@id/cmtg_sw_half_day"
                                style="@style/ReminderSwitch"/>

                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/FormCardView"
                    android:id="@+id/cmtg_notify_switch"
                    android:layout_below="@id/cmtg_cv_reminder"
                    card_view:cardBackgroundColor="@color/light_background"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/text_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/cmtg_invite_all"
                            android:textColor="@color/dark_grey_text" />

                        <android.support.v7.widget.SwitchCompat
                            style="@style/FormSwitch"
                            android:id="@+id/sw_notifyall"
                            android:checked="true" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <!-- todo: this is highly inefficient, flatten & combine soon -->
                <RelativeLayout
                    android:id="@+id/cmtg_rl_notify_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cmtg_notify_switch"
                    android:background="@color/light_background"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/underline">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cv_notify_member_prefix"
                            android:textColor="@color/black"
                            android:padding="10dp" />

                        <TextView
                            android:id="@+id/cmtg_tv_member_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="5"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/cmtg_tv_suffix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="members"
                            android:textColor="@color/black"
                            android:padding="10dp" />

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

    <Button
        android:id="@+id/cmtg_btn_call_meeting"
        style="@style/Button_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/cmtg_btn_call"
        android:layout_marginTop="10dp" />

</RelativeLayout>
