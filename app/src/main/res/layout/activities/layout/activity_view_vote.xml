<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vv_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white_background"
    tools:context="com.techmorphosis.grassroot.ui.activities.ViewVote">

    <android.support.v7.widget.Toolbar
        android:id="@+id/vv_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/primaryColor"
        android:elevation="5dp">

        <TextView
            android:id="@+id/txt_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vv_tv_toolbar"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_large" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/rl_vv_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vv_toolbar"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bt_editVote"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingTop="15dp"
            android:scrollbars="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                card_view:cardBackgroundColor="#fff"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="3dp"
                card_view:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_vv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/vv_title"
                        android:textSize="@dimen/txt_medium"
                        tools:text="tile" />

                    <RelativeLayout
                        android:id="@+id/rl_nested"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_vv_title"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:id="@+id/txt_vv_groupname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/vv_postedby"
                            android:textSize="@dimen/txt_small"
                            android:textStyle="bold"
                            tools:text="Poster By" />

                        <TextView
                            android:id="@+id/txt_vv_deadline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/vv_deadline"
                            android:textSize="@dimen/txt_small"
                            tools:text="30/3/16 11:30 am" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/rl_nested"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/vv_divider"

                        />

                    <TextView
                        android:id="@+id/txt_vv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/vv_description"
                        android:textSize="@dimen/txt_medium"
                        tools:text="Descriptions"

                        />

                    <RelativeLayout
                        android:id="@+id/rl_vote_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_vv_description"
                        android:layout_marginTop="5dp"
                        android:background="@color/vv_Body_agree_disagree"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:id="@+id/txt_header"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="15dp"
                                android:text="@string/vv_rl_vote_header"
                                android:textColor="@color/vv_Requestmessage"
                                android:textSize="@dimen/txt_medium"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/ll_image_holder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:layout_marginTop="15dp"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <ImageButton
                                    android:id="@+id/Thumpsdown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"

                                    android:layout_marginRight="3dp"
                                    android:background="?android:selectableItemBackground"
                                    android:padding="6dp"
                                    android:scaleType="fitCenter" />

                                <ImageButton
                                    android:id="@+id/Thumpsup"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:background="?android:selectableItemBackground"
                                    android:padding="6dp"

                                    android:scaleType="fitCenter" />

                            </LinearLayout>

                        </LinearLayout>


                    </RelativeLayout>


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/rl_vote_status"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/header"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/vv_Body_Response"
                            android:paddingBottom="12dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="12dp"
                            android:paddingTop="12dp"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="Response"
                                android:textColor="@color/vv_txtResponse"
                                android:textSize="@dimen/txt_medium"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/iv_expand"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_arrow_down" />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/expandable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/vv_body_row"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"

                            >

                            <LinearLayout
                                android:id="@+id/ll_yes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="12dp"
                                    android:paddingTop="12dp">

                                    <TextView
                                        android:id="@+id/txt_yes"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="@string/vv_yes" />

                                    <TextView
                                        android:id="@+id/count_yes"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:textColor="@color/vv_yes"
                                        tools:text="2" />

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/vv_divider" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="12dp"
                                    android:paddingTop="12dp">

                                    <TextView
                                        android:id="@+id/txt_no"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="@string/vv_no" />

                                    <TextView
                                        android:id="@+id/count_no"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:textColor="@color/vv_no"
                                        tools:text="2" />

                                </RelativeLayout>

                                <View
                                    android:id="@+id/divider_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/vv_divider" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_maybe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="12dp"
                                    android:paddingTop="12dp">

                                    <TextView
                                        android:id="@+id/txt_maybe"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="@string/vv_maybe" />

                                    <TextView
                                        android:id="@+id/count_maybe"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:textColor="@color/black"
                                        tools:text="2" />

                                </RelativeLayout>

                                <View
                                    android:id="@+id/divider_maybe"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/vv_divider" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/ll_invalid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="12dp"
                                    android:paddingTop="12dp">

                                    <TextView
                                        android:id="@+id/txt_invalid"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="@string/vv_invalid" />

                                    <TextView
                                        android:id="@+id/count_invalid"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:textColor="@color/black"
                                        tools:text="2" />

                                </RelativeLayout>

                                <View
                                    android:id="@+id/divider_invalid"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/vv_divider" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_numberOfUsers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="12dp"
                                    android:paddingTop="12dp">

                                    <TextView
                                        android:id="@+id/txt_numberOfUsers"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="@string/vv_numberOfUsers" />

                                    <TextView
                                        android:id="@+id/count_numberOfUsers"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:textColor="@color/black"
                                        tools:text="2" />

                                </RelativeLayout>

                                <View
                                    android:id="@+id/divider_numberOfUsers"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/vv_divider" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_numberNoRSVP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="12dp"
                                    android:paddingTop="12dp">

                                    <TextView
                                        android:id="@+id/txt_numberNoRSVP"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="@string/vv_numberNoRSVP" />

                                    <TextView
                                        android:id="@+id/count_numberNoRSVP"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:textColor="@color/black"
                                        tools:text="2" />

                                </RelativeLayout>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </ScrollView>

        <Button
            android:id="@+id/bt_editVote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            style="@style/Button_white"
            android:text="@string/vv_bt_editvote"
            android:layout_marginTop="10dp"

            />

    </LinearLayout>


    <include
        android:id="@+id/error_layout"
        layout="@layout/qube_error_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <com.techmorphosis.grassroot.utils.ProgressBarCircularIndeterminate
        android:id="@+id/progressBarCircularIndeterminate"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:background="@color/primaryColor"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_prg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBarCircularIndeterminate"
        android:layout_centerHorizontal="true"
        android:text="Please Wait.."
        android:visibility="gone"

        />


</RelativeLayout>
