<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root_nc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NotificationCenter">


    <android.support.v7.widget.Toolbar
        android:id="@+id/tlb_nc"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/primaryColor">

        <TextView
            android:id="@+id/txt_tlb_nc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nc_txt_tlb"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_large" />

    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_nc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tlb_nc"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:clipToPadding="false"
        android:paddingTop="10dp"
        android:visibility="gone"
        tools:listitem="@layout/row_notification">

    </android.support.v7.widget.RecyclerView>


    <org.grassroot.android.ui.views.ProgressBarCircularIndeterminate
        android:id="@+id/prg_nc"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:background="@color/primaryColor"
        android:visibility="gone">

    </org.grassroot.android.ui.views.ProgressBarCircularIndeterminate>

    <TextView
        android:id="@+id/txt_prg_nc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prg_nc"
        android:layout_centerHorizontal="true"
        android:text="@string/prg_message"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/prg_nc_paging"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />


    <include
        android:id="@+id/error_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/qube_error_layout"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />


</RelativeLayout>
