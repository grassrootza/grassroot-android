<RelativeLayout
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/im_profile_setting_bg"
    xmlns:tools="http://schemas.android.com/tools">
   
    <LinearLayout
        android:id="@+id/pp_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/transparent"
        >
        
        <ImageView
            android:id="@+id/iv_pp_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/btn_back_wt"
            android:layout_gravity="center_vertical"
            android:background="@drawable/profile_bg"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pp_txt_toolbar"
            android:paddingLeft="15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_large"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pp_toolbar"

        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            >
            
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:expandedTitleMarginEnd="30dp"
                app:expandedTitleMarginStart="10dp"
                app:contentScrim="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="scroll|enterAlways"
                    >

                    <ImageView
                        android:id="@+id/iv_pp_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_profile_default_setting"
                        android:background="@android:color/transparent"
                        android:paddingLeft="20dp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_pp_profile"
                        >
                        <TextView
                            android:id="@+id/txt_pp_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Username"
                            android:textSize="@dimen/txt_large"
                            android:textColor="@color/white"
                            android:paddingLeft="@dimen/padding"
                            android:background="@android:color/transparent"

                            />

                        <TextView
                            android:id="@+id/txt_pp_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="0616780986"
                            android:textSize="@dimen/txt_large"
                            android:textColor="@color/white"
                            android:paddingLeft="@dimen/padding"
                            android:background="@android:color/transparent"

                            />


                    </LinearLayout>

                </RelativeLayout>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@color/off_white_background"
            >



            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_pp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"

                >

            </android.support.v7.widget.RecyclerView>


        </RelativeLayout>


    </android.support.design.widget.CoordinatorLayout>

    <Button
        android:id="@+id/bt_pp_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/pp_bt_update"
        android:textSize="@dimen/txt_large"
        android:textColor="@drawable/green_txt"
        android:background="@drawable/register"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        />


</RelativeLayout>